<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Hello Adonis</title>
  
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
      <div class="logo">
        freshsneaks
      </div>
      <div class="menu">
        <a href="#">About</a>
        <a href="#">New Arrival</a>
        <a href="#">Categories</a>
        <a href="#" class="cart-link">Cart<span>4</span></a>
      </div>
  </header>
  <section class="content-area home-page">
    <div class="top-section">
      <div class="product">
        <div class="circle">
        <img src="img/products/adidas-yeezy-boost-yellow.png" alt="">
        </div>
      </div>
      <div class="titles">
          <h3>Yeezy</h3>
          <h1>Boost 350</h1>
      </div>
    </div>
  </section>

  <section id="cart-popup">
    <div>
      <div class="cart-title">
        <div class="title">My cart</div>
      </div>
    </div>
      <div class="cart-items">
        <div class="item-container">
          <div class="item">
              <img src="img/products/adidas-yeezy-boost-yellow.png" alt="">
              <div class="delete-btn">
                <div class="circle">X</div>
              </div>
          </div>
        </div>
        <div class="item-container">
          <div class="item">
              <img src="img/products/adidas-yeezy-boost-yellow.png" alt="">
              <div class="delete-btn">
                <div class="circle">X</div>
              </div>
          </div>
        </div>
        <div class="item-container">
          <div class="item">
              <img src="img/products/adidas-yeezy-boost-yellow.png" alt="">
              <div class="delete-btn">
                <div class="circle">X</div>
              </div>
          </div>
        </div>
        <div class="item-container">
          <div class="item">
              <img src="img/products/adidas-yeezy-boost-yellow.png" alt="">
              <div class="delete-btn">
                <div class="circle">X</div>
              </div>
          </div>
        </div>
        <!--ENDS THE LAST ITEM -->
      </div>
      <!-- ENDS CART-ITEM CONTAINER -->
      <div class="product-total">
        <div class="inside-container">
          <div class="title">Quantity</div>
          <div class="number">x4</div>
      </div>
      </div>
      <div class="price-total">
        <div class="inside-container">
          <div class="title">Total</div>
          <div class="number">$3,000</div>
        </div>
      </div>
      <div class="checkout">
        <div class="title">Checkout</div>
        <span class="ti-shopping-cart"></span>
      </div>
  </section>
  






  
  <script src="js/dist/vendors~FirstComp.js"></script>
  <script src="js/dist/FirstComp.js"></script>
</body>
</html>
